<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <report id="report_pyg_c_cc"
                model="fpa.pyg.c.cc.line"
                string="Informe Comparativo"
                report_type="qweb-pdf"
                name="financial_reports.template_report_pyg_c_cc"
                file="financial_reports.template_report_pyg_c_cc"/>


        <record id="report_pyg_c_cc" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="paperformat_horizontal_reports"/>
        </record>

        <template id="template_report_pyg_c_cc">
            <style>
                pre {
                font-size:10px;
                font-family: monospace;
                white-space: pre;
                margin: 0em 0;
                border-top-style: none;
                border-left-style: none;
                border-right-style: none;
                border-bottom-style: none;
                background: #FFFFFF;
                }
                #corners2 {
                background-color: #78CDD9;
                padding: 80px;
                font-weight: bold;
                color: #ffffff;
                font-size:10px;
                }
                #borderless{
                border-top-style: none;
                border-left-style: none;
                border-right-style: none;
                border-bottom-style: none;
                }

                #corners {
                border-radius: 25px 25px;
                background: #1687B4;
                padding: 0px;
                width: 100%;
                heigth: 10%;
                color: #ffffff;
                font-weight: bold;
                }

            </style>

            <div class="page" style="font-size:10px;margin-top: 0px">
                <div id="corners">
                    <strong>
                        <div align="center">
                            <h4>
                                <span t-field="docs[0].financial_id.name"/>
                            </h4>
                        </div>

                        <div class="container">

                            <div class="col-xs-6" align="left" style="margin-left: 100px; margin-top: -5px">
                                <h5>
                                    <span t-field="docs[0].encabezado_id.chart_account_id.company_id.name"/>
                                </h5>
                            </div>
                            <div class="col-xs-6" align="center" style="margin-left: -100px; margin-top: -5px">
                                <h5>FECHA DE GENERACIÃ“N:
                                    <span t-esc="(datetime.datetime.now()-relativedelta(hours=5)).strftime('%Y-%m-%d %H:%M:%S')"/>
                                </h5>
                            </div>

                            <div class="col-xs-6" align="left" style="margin-left: 100px; margin-top: -10px">
                                <h5>NIT:
                                    <span t-field="docs[0].encabezado_id.company_id.partner_id.ref"/>
                                    -
                                    <span t-field="docs[0].encabezado_id.company_id.partner_id.dev_ref"/>
                                </h5>
                            </div>
                            <div class="col-xs-6" align="center" style="margin-left: -190px; margin-top: -5px">
                                <h5>DESDE:
                                    <span t-field="docs[0].encabezado_id.date_from"/>
                                </h5>
                            </div>

                            <div class="col-xs-6" align="left" style="margin-left: 100px; margin-top: -10px">
                                <h5>
                                    <span t-esc="docs[0].financial_id._get_unidades()"/>
                                    de
                                    <span t-field="docs[0].encabezado_id.chart_account_id.company_id.currency_id.name"/>
                                </h5>
                            </div>
                            <div class="col-xs-6" align="center" style="margin-left: -187px; margin-top: -5px">
                                <h5>HASTA :
                                    <span t-field="docs[0].encabezado_id.date_to"/>
                                </h5>
                            </div>
                        </div>

                    </strong>
                </div>
                <br/>
                <span>
                    <strong>RESUMEN</strong>
                </span>
                <br/>
                <table class="table-striped" style="font-size:100%;width: 100%; margin-top: 10px; margin-bottom: 30px">
                    <thead id="corners2">
                        <tr>
                            <th style="text-align: left;">CONCEPTO</th>
                            <th style="text-align: left;"></th>
                            <th style="text-align: left;">CUENTA ANALITICA</th>
                            <th style="text-align: right;">SALDO FINAL</th>
                            <th style="text-align: right;">SALDO COMPARATIVO</th>
                            <th style="text-align: right;">VARIACION</th>
                            <th style="text-align: right;">% VARIACION</th>

                        </tr>
                    </thead>

                    <tbody>
                        <t>
                            <t t-as="concepts"
                               t-foreach="docs[0].financial_id.concepts_ids.sorted(key=lambda b: b.sequence)">
                                <t t-if="not concepts.resume">
                                    <t t-if="concepts.before">
                                        <tr style="font-size:100%;">
                                            <t t-as="o" t-foreach="docs.sorted(key=lambda b: b.concepts_id)">
                                                <t t-if="o.concepts_id.id == concepts.id and not o.account_id">
                                                    <th style="text-align: left;">
                                                        <strong>
                                                            <span t-field="concepts.name"/>
                                                        </strong>
                                                    </th>
                                                    <th style="text-align: right;">
                                                        <strong>
                                                            <span t-field="o.analytic_account_id"/>
                                                        </strong>
                                                    </th>

                                                    <th style="text-align: right;">
                                                        <strong>
                                                            <span t-field="o.amount_final"
                                                                  t-field-options='{"widget": "monetary", "display_currency": "o.company_id.currency_id"}'/>
                                                        </strong>
                                                    </th>
                                                    <th style="text-align: right;">
                                                        <strong>
                                                            <span t-field="o.amount_comparative"
                                                                  t-field-options='{"widget": "monetary", "display_currency": "o.company_id.currency_id"}'/>
                                                        </strong>
                                                    </th>
                                                    <th style="text-align: right;">
                                                        <strong>
                                                            <span t-field="o.variation"
                                                                  t-field-options='{"widget": "monetary", "display_currency": "o.company_id.currency_id"}'/>
                                                        </strong>
                                                    </th>
                                                    <th style="text-align: right;">
                                                        <strong>
                                                            <span t-field="o.porc_variation"/>
                                                            %
                                                        </strong>
                                                    </th>
                                                </t>
                                            </t>
                                        </tr>
                                    </t>
                                    <t t-if="concepts.detail">
                                        <t t-as="o" t-foreach="docs">
                                            <t t-if="o.concepts_id.id == concepts.id and o.account_id">
                                                <tr style="font-size:80%;">
                                                    <th style="text-align: right;">
                                                        <strong>
                                                            <span t-field="o.account_id"/>
                                                        </strong>
                                                    </th>
                                                    <th style="text-align: right;">
                                                        <strong>
                                                            <span t-field="o.analytic_account_id"/>
                                                        </strong>
                                                    </th>
                                                    <th style="text-align: right;">
                                                        <strong>
                                                            <span t-field="o.amount_final"
                                                                  t-field-options='{"widget": "monetary", "display_currency": "o.company_id.currency_id"}'/>
                                                        </strong>
                                                    </th>
                                                    <th style="text-align: right;">
                                                        <strong>
                                                            <span t-field="o.amount_comparative"
                                                                  t-field-options='{"widget": "monetary", "display_currency": "o.company_id.currency_id"}'/>
                                                        </strong>
                                                    </th>
                                                    <th style="text-align: right;">
                                                        <strong>
                                                            <span t-field="o.variation"
                                                                  t-field-options='{"widget": "monetary", "display_currency": "o.company_id.currency_id"}'/>
                                                        </strong>
                                                    </th>
                                                    <th style="text-align: right;">
                                                        <strong>
                                                            <span t-field="o.porc_variation"/>
                                                            %
                                                        </strong>
                                                    </th>
                                                </tr>
                                            </t>

                                        </t>
                                    </t>
                                    <t t-if="not concepts.before">
                                        <tr style="font-size:100%;">
                                            <t t-as="o" t-foreach="docs.sorted(key=lambda b: b.concepts_id)">
                                                <t t-if="o.concepts_id.id == concepts.id and not o.account_id">
                                                    <th style="text-align: left;">
                                                        <strong>
                                                            <span t-field="concepts.name"/>
                                                        </strong>
                                                    </th>
                                                    <th style="text-align: right;">
                                                        <strong>
                                                            <span t-field="o.account_id"/>
                                                        </strong>
                                                    </th>
                                                    <th style="text-align: right;">
                                                        <strong>
                                                            <span t-field="o.analytic_account_id"/>
                                                        </strong>
                                                    </th>
                                                    <th style="text-align: right;">
                                                        <strong>
                                                            <span t-field="o.amount_final"
                                                                  t-field-options='{"widget": "monetary", "display_currency": "o.company_id.currency_id"}'/>
                                                        </strong>
                                                    </th>
                                                    <th style="text-align: right;">
                                                        <strong>
                                                            <span t-field="o.amount_comparative"
                                                                  t-field-options='{"widget": "monetary", "display_currency": "o.company_id.currency_id"}'/>
                                                        </strong>
                                                    </th>
                                                    <th style="text-align: right;">
                                                        <strong>
                                                            <span t-field="o.variation"
                                                                  t-field-options='{"widget": "monetary", "display_currency": "o.company_id.currency_id"}'/>
                                                        </strong>
                                                    </th>
                                                    <th style="text-align: right;">
                                                        <strong>
                                                            <span t-field="o.porc_variation"/>
                                                            %
                                                        </strong>
                                                    </th>
                                                </t>
                                            </t>
                                        </tr>
                                    </t>
                                </t>
                            </t>
                        </t>
                    </tbody>
                </table>
            </div>
            <div class="footer" style="margin-top: 55 PX">
                <div align="center">
                    <small>
                        <strong>
                            <span>Pagina</span>
                            <span class="page"/>
                            de
                            <span class="topage"/>
                        </strong>
                    </small>
                </div>
            </div>

        </template>
    </data>
</openerp>
